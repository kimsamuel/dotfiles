!! to match gnome-terminal "Linux console" scheme / creates cursor highlighting issues with vim will fix later maybe
!! foreground/background
!URxvt*background: #000000
!URxvt*foreground: #ffffff
!! black
!URxvt.color0  : #000000
!URxvt.color8  : #555555
!! red
!URxvt.color1  : #AA0000
!URxvt.color9  : #FF5555
!! green
!URxvt.color2  : #00AA00
!URxvt.color10 : #55FF55
!! yellow
!URxvt.color3  : #AA5500
!URxvt.color11 : #FFFF55
!! blue
!URxvt.color4  : #0000AA
!URxvt.color12 : #5555FF
!! magenta
!URxvt.color5  : #AA00AA
!URxvt.color13 : #FF55FF
!! cyan
!URxvt.color6  : #00AAAA
!URxvt.color14 : #55FFFF
!! white
!URxvt.color7  : #AAAAAA
!URxvt.color15 : #FFFFFFRxvt*scrollTtyOutput: false
!
! set urxvt scroll options / mouse wheel does not work in secondary buffer no patch
URxvt*scrollwithBuffer: true
URxvt*scrollTtyKeyPress: true
URxvt*secondaryScreen: true
URxvt*secondaryScroll: false
URxvt*secondaryWheel: true
URxvt*scrollBar: false

! urxvt font rendering
URxvt*font: xft:terminus:size=20
Xft.lcdfilter: lcddefault
Xft.antialias: true
Xft.autohint: 0
Xft.hinting: true
Xft.hintstyle: hintslight
Xft.rgba: rgb
Xft.dpi: 96

! xterm font rendering
xterm*faceName: Consolas
xterm*fontSize: 17
